  "files.eol": "\n",
  "typescript.format.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["**/replace_rules.json"],
      "schema": {
        "type": "object",
        "properties": {
          "elements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "note": {
                  "type": "string"
                },
                "onlyFor": {
                  "enum": ["webSpeech", "nVoice"]
                },
                "replacement": {
                  "type": "string"
                }
              },
              "required": ["replacement"],
              "oneOf": [
                {
                  "properties": {
                    "regularExpression": {
                      "type": "string"
                    }
                  },
                  "required": ["regularExpression"]
                },
                {
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["text"]
                }
              ]
            }
          }
        }
      }
    }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit"
  },
  "css.validate": false,
  "less.validate": false,
  "stylelint.validate": ["css", "less", "vue"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.preferences.autoImportFileExcludePatterns": ["**/app-services.ts"],

  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "日本語で書いてください"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "text": "日本語で書いてください。\n\n以下の形式で記載してください。\n\n# このpull requestが解決する内容\n# 動作確認手順\n# 関連するIssue（あれば）"
    }
  ],
  "githubPullRequests.createDefaultBaseBranch": "createdFromBranch"
}
